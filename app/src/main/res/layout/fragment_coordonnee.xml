<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoordonneeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordonnee"
            android:textSize="12pt"
            android:layout_margin="24dp"
            android:layout_gravity="center"
            android:textColor="@color/hotblue"
            android:textStyle="bold"
            android:tooltipText="dddddddd"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:background="#eee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donnees"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="9pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valeurs"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="9pt"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/lat_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/lon_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pays"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/pays_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ville"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/ville_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/add_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="8pt"
                    android:textStyle="bold"/>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregister"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</FrameLayout>